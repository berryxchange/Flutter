{
  "hosting": {
    "public": "",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9085
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8090
    },
    "database": {
      "port": 9007
    },
    "hosting": {
      "public": "public",  // the only required attribute for Hosting
      "port": 5000,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true
    }
  }
}
